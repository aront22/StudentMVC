@model Grade

@{
    ViewData["Title"] = "Add grade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="align-middle p-3">Add new grade for a student.</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mark" class="control-label"></label>
                <input asp-for="Mark" class="form-control" />
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label>
                <select id="drpEmpList" class="form-control" asp-for="StudentId" asp-items="@(new SelectList(Model.Students, "Id", "Name"))">
                    <option value="">-- Select Student --</option>
                </select>
                <input type="hidden" asp-for="StudentId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Student" asp-action="Grades">Back to List</a>
</div>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
