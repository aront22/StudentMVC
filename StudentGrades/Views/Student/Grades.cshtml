@model IEnumerable<StudentStatistics>

@{
    ViewData["Title"] = "Grades";
}

<h1 class="align-middle p-3">Grades</h1>

<div class="container p-3">
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>
                       Name
                   </th>
                   <th>
                       Average
                   </th>
                   <th>
                       Failed Count
                   </th>
                   <th>
                       Best Grade
                   </th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Name</td>
                        <td width="25%">@item.Average.ToString("0.##")</td>
                        <td width="25%">@item.FailedCount</td>
                        <td width="25%">@item.BestGrade</td>
                    </tr>
                }
           </tbody>
        </table>
    }
    else
    {
        <h1 class="align-middle">No Grades</h1>
    }
    
</div>