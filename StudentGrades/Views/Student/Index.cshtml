@model IEnumerable<Student>

@{
    ViewData["Title"] = "Students";
}

<h1 class="align-middle p-3">Students</h1>

<div class="container p-3">
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>
                       Name
                   </th>
                   <th>
                       Year
                   </th>
                   <th>
                       Birth Date
                   </th>
                   <th>
                       Phone
                   </th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Name</td>
                        <td width="25%">@item.Year</td>
                        <td width="25%">@item.BirthDate.ToShortDateString()</td>
                        <td width="25%">@item.Phone</td>
                    </tr>
                }
           </tbody>
        </table>
    }
    else
    {
        <h1 class="align-middle">No Students</h1>
    }
    
</div>